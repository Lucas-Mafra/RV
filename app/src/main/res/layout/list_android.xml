<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/viewList">


    <ImageView
            android:layout_width="59dp"
            android:layout_height="56dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgIcon"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="95dp"
            android:layout_height="16dp"
            android:id="@+id/txtName" app:layout_constraintStart_toEndOf="@+id/imgIcon"
            android:layout_marginStart="12dp" app:layout_constraintTop_toTopOf="@+id/imgIcon"
    />
    <TextView
            android:text="TextView"
            android:layout_width="67dp"
            android:layout_height="18dp"
            android:id="@+id/txtVersion"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/txtName"
            app:layout_constraintStart_toEndOf="@+id/imgIcon" android:layout_marginStart="12dp"/>
</android.support.constraint.ConstraintLayout>